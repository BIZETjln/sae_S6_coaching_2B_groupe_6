{% extends 'base.html.twig' %}

{% block title %}Accès refusé{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-container">
                <h1 class="display-4 text-danger mb-4">Accès refusé</h1>
                <div class="error-icon mb-4">
                    <i class="fas fa-lock fa-5x text-danger"></i>
                </div>
                <p class="lead">Vous n'avez pas les permissions nécessaires pour accéder à cette page.</p>
                <div class="mt-5">
                    <a href="{{ path('app_login') }}" class="btn btn-primary me-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                    </a>
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-home me-2"></i>Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 